@model MantenedoraCalidad.Models.MODELO

@{
    ViewBag.Title = "Eliminar Modelo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #dfe7ea;
    }
</style>

<h2>Eliminar Modelo</h2>

<h3> ¿ Esta seguro de eliminar este modelo ? </h3>
<div>
    <hr />
    <dl class="dl-horizontal">
       
        <dt>
           Codigo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_modelo)
        </dd>
        <dt>
          Modelo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom_modelo)
        </dd>

        <dt>
         Familia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom_familia)
        </dd>

        <dt>
           Marca
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom_marca)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index","MODELO")'">
        REGRESAR AL LISTADO
    </button> |
    <input type="submit" value="Eliminar" class="btn btn-danger" /> 

</div>
    }
</div>
