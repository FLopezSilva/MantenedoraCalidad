@model MantenedoraCalidad.Models.USUARIO

@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    body {
        background-color: #dfe7ea;
    }
</style>
<h2>Eliminar Usuario</h2>

<h3>¿ Esta seguro de eliminar este usuario ? </h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Rut
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rut_usuario)
        </dd>
        <dt>
           Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom_usuario)
        </dd>

        <dt>
            Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.apell_usuario)
        </dd>

        <dt>
            Contraseña
        </dt>

        <dd>
            @Html.DisplayFor(model => model.contr_usuario)
        </dd>

        <dt>
           Supervisor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom_supervisor)
        </dd>

        <dt>
           Rol
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ROL.descrip_rol)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index","USUARIOs")'">
        REGRESAR AL LISTADO
    </button> |
    <input type="submit" value="Delete" class="btn btn-danger" /> 

</div>
    }
</div>
